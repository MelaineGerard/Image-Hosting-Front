doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(name='twitter:card' content='summary_large_image')
        meta#embed-title(property='og:title' content='Ajouter une image')
        meta#embed-desc(property='og:description' content="Un hébergeur d'image par Melaine Gérard")
        meta(name='theme-color' content='#2F29B6')
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css")

        title Ajouter une image
    body.bg-dark.text-light
        .container
            .d-flex.flex-column.min-vh-100.justify-content-center.align-items-center
                .box.card.bg-dark(style='width: 30rem;')
                    .card-body.text-center
                        form(enctype='multipart/form-data' action='https://image-api.melaine-gerard.fr/images' method='POST')
                            h1 Ajouter une image
                            .mb-3
                                label.form-label(for='author') Auteur
                                input#author.form-control(type='text' name='author' placeholder="Nom de l'auteur" required='')
                            .mb-3
                                label.form-label(for='image') Image
                                input#image.form-control(type='file' name='image' accept='image/*' required='')
                            .d-grid.gap-2
                                button.btn.btn-primary(type='submit') Ajouter
