doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(name='twitter:card' content='summary_large_image')
        meta#image-src(name='twitter:image:src' content=image)
        meta#discord(name='twitter:image' content=image)
        meta#embed-title(property='og:title' content=uuid)
        meta#embed-desc(property='og:description' content='Ajouté le ' + createdDate + ' by ' + author)
        meta#embed-image(property='og:image' content=image)
        meta(name='theme-color' content='#2F29B6')
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css")

        title #{uuid} - #{author}
    body.bg-dark.text-light
        .container
            .d-flex.flex-column.min-vh-100.justify-content-center.align-items-center
                .box.card.bg-dark(style='width: 30rem;')
                    img.card-img-top(src=image alt=uuid)
                    .card-body.text-center
                        p.card-text
                            | #{uuid}
                            br
                            | Ajouté le
                            span.fw-bold #{createdDate} 
                            | par 
                            span.fw-bold #{author}
